{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmit": false,
    "inlineSources": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib",
    "**/*.spec.ts"
  ]
}
